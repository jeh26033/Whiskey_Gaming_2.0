<% provide(:title, "Members")%>
<div class="container">
	<h1>Here's the who's who of Whiskey Gaming</h1>
	<div class="content">
		
<%= will_paginate %>
		<ul class="users-list ">
		<% if current_user %>
			<% @users.each do |user|%>
				<li class="devborder index-profile"> <%= image_tag(user.avatar_url)%> <a href= "/users/ <%= user.id %>"<b> <%= user.nickname %></b> </a>
					<% if current_user.admin? && current_user %>
   						| <%= link_to "delete", user, method: :delete,
                                data: { confirm: "You sure?" } %>
  					<% end %>

  					<% if user.admin? %>
  					|	<%=  'admin' %>
  					<% end %>
				</li>
			<% end %>
		</ul>
		<% else %>
			<h2>Be sure to log in! </h2>
			<h3 class="nav-item"><%= link_to 'Log In via Steam', '/auth/steam' %> </h3></h2>

		<% end %>

<%= will_paginate %>
	</div>

</div>